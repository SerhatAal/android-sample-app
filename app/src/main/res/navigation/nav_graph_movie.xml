<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_movie"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.adesso.movee.scene.movie.MovieFragment"
        tools:layout="@layout/fragment_movie">

        <action
            android:id="@+id/to_movie_detail"
            app:destination="@id/movieDetailFragment">

            <argument
                android:name="show"
                app:argType="com.adesso.movee.uimodel.ShowUiModel"
                app:nullable="false"/>

        </action>

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.adesso.movee.scene.moviedetail.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="show"
            app:argType="com.adesso.movee.uimodel.ShowUiModel"
            app:nullable="false"/>

    </fragment>

</navigation>